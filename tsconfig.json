{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@pages/*": ["pages/*"],
      "@redux/*": ["redux/*"],
      "@utils/*": ["utils/*"],
      "@styles/*": ["styles/*"],
      "@urls/*": ["urls/*"]
    },
    "allowJs": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "pretty": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2018",
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/components/form/useForm.js",
    "src/components/input/Input.js",
    "src/components/registration/Registration.jsx",
    "src/components/registration/registrationSlice.jsx",
    "src/components/steps/ThirdStep.js",
    "src/components/steps/SecondStep.js",
    "src/components/steps/FirstStep.js",
    "src/components/steps/FinalStep.js",
    "src/components/registration/registrationSlice.jsx",
    "src/components/form/useForm.jsx",
    "src/pages/index.jsx"
  ],
  "exclude": ["node_modules"]
}
